{
    "version": 2,
    "builds": [
        {
            "src": "client/vite.config.ts",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        },
        {
            "src": "server/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}